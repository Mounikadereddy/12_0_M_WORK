    <!-- DO NOT REMOVE THE WS HANDLER BEAN 
         THIS IS HOW TO IMPLEMENT THE SECURITY HEADER ON RbpsWS
         YOUR RUNTIME ENVIRONMENT SHOULD BE SET PROPERLY.
     -->
    <wss:binding url="/RbpsWS">
        <wss:service>
            <ws:service bean="#rbpsWS">
                <ws:handlers>
                </ws:handlers>
            </ws:service>
        </wss:service>
    </wss:binding>

    <!-- bean id="wsAuthorizationHandler" class="gov.va.vba.framework.esb.proxy.handler.WSAuthorizationHandler" / -->

    <bean id="rbpsWS" 
          class="gov.va.vba.rbps.services.ws.RbpsWS">
          
        <property name="rbpsServiceFacade" ref="rbpsServiceFacade" />
        <property name="checkerServicePopulator" ref="checkerServicePopulator" />
        <property name="currentProcessFilePath"   value="${rbps.ws.rbpsBatch.currentprocess.filepath}" />
